source "http://rubygems.org"

gem "rails", "~> 3.2"

gem "bundler"
gem "carrierwave"
gem "carrierwave-mongoid", require: "carrierwave/mongoid"
gem "decent_exposure"
gem "haml"
gem "jquery-rails"
gem "mongoid", git: "git://github.com/mongoid/mongoid.git", branch: "serialization-rewrite"
